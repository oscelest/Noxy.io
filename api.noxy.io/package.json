{
  "name":            "@noxy.io/backend",
  "version":         "1.0.0",
  "description":     "Main API Server.",
  "scripts":         {
    "start":      "ts-node ./app.ts",
    "dev":        "nodemon ./app.ts",
    "update":     "npm outdated && npm update --save",
    "db-next":    "npm run db-migrate && npm run db-up",
    "db-up":      "npx mikro-orm migration:up",
    "db-down":    "npx mikro-orm migration:down",
    "db-migrate": "npx mikro-orm migration:create",
    "db-create":  "npx mikro-orm schema:create -r",
    "db-update":  "npx mikro-orm schema:update -r",
    "db-delete":  "npx mikro-orm schema:drop -r",
    "db-reset":   "npm run db-delete && npm run db-create"
  },
  "nodemonConfig":   {
    "watch":   [
      "./",
      "../common/"
    ],
    "ext":     "ts",
    "ignore":  [
      "*.test.ts"
    ],
    "delay":   "500ms",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "mikro-orm":       {
    "useTsNode":   true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  },
  "dependencies":    {
    "@mikro-orm/cli":   "^4.5.10",
    "@mikro-orm/core":  "^4.5.10",
    "@mikro-orm/mysql": "^4.5.10",
    "adm-zip":          "^0.5.9",
    "dotenv":           "^14.2.0",
    "fs-extra":         "^10.0.0",
    "jsonwebtoken":     "^8.5.1",
    "lodash":           "^4.17.21",
    "mime-types":       "^2.1.34",
    "moment":           "^2.29.1",
    "mysql2":           "^2.3.3",
    "ts-node":          "^10.4.0",
    "typescript":       "^4.5.4",
    "uuid":             "^8.3.2"
  },
  "devDependencies": {
    "@types/adm-zip":                   "^0.4.34",
    "@types/express":                   "^4.17.13",
    "@types/express-serve-static-core": "^4.17.28",
    "@types/fs-extra":                  "^9.0.13",
    "@types/jsonwebtoken":              "^8.5.8",
    "@types/lodash":                    "^4.14.178",
    "@types/mime-types":                "^2.1.1",
    "@types/node":                      "^17.0.9",
    "@types/uuid":                      "^8.3.4",
    "nodemon":                          "^2.0.15",
    "reflect-metadata":                 "^0.1.13"
  }
}
